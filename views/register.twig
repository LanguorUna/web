{% extends 'layout.twig' %}
{% block main %}
<main class="content content_auth">
   <div class="content__block auth">
      <div class="auth__title">Регистрация</div>
      <form class="auth__content auth__content_registration" method="post" action="/register">
         <label for="login" class="auth__label">Логин</label>
         <input type="text" name="login" class="auth__login" required>
         <label for="password" class="auth__label">Пароль</label>
         <input type="password" name="password" class="auth__password" required>
         <label for="fullName" class="auth__label">Имя</label>
         <input type="text" name="fullName" class="auth__name" required>
         <div class="auth__buttons">
            <button class="auth__sign">Регистрация</button>
            <a href="/login" class="auth__mode">Вход</a>
         </div>
      </form>
   </div>
</main>
{% endblock %}